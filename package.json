{
  "name": "signmeup",
  "private": true,
  "scripts": {
    "start": "meteor --settings settings.json",
    "lint": "./node_modules/eslint/bin/eslint.js . ; find . -path ./node_modules -prune -o -name '*.scss' -exec stylelint {} +",
    "prettier": "find . \\( -path ./.meteor -o -path ./node_modules \\) -prune -o -name '*.js' -exec prettier --write {} +",
    "deploy-qa": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy --settings settings.qa.json signmeup-qa.meteorapp.com",
    "deploy-prod": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy --settings settings.prod.json signmeup-prod.meteorapp.com"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.55",
    "autoprefixer": "^7.2.5",
    "bcrypt": "^1.0.3",
    "bootstrap": "^4.1.3",
    "bootstrap-datepicker": "^1.7.1",
    "filesaver": "^0.0.13",
    "geopattern": "^1.2.3",
    "jquery": "^3.2.1",
    "jquery-mask-plugin": "^1.14.13",
    "meteor-node-stubs": "^0.3.2",
    "moment": "^2.20.1",
    "popper.js": "^1.12.9",
    "tether": "^1.4.3",
    "ua-parser-js": "^0.7.17"
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-meteor": "^5.1.0",
    "prettier": "1.14.2",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-processor-html": "^1.0.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 3 versions"
        ]
      }
    }
  }
}
